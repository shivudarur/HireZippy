<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="WhiteTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="largeTextSytle" parent="android:Widget.TextView">
        <item name="android:textSize">25dp</item>
    </style>

    <style name="logoTextSytle" parent="android:Widget.TextView">
        <item name="android:textSize">30dp</item>
    </style>

    <style name="normalTextSytle" parent="android:Widget.TextView">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="mediumTextSytle" parent="android:Widget.TextView">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mediumTextSytle2" parent="android:Widget.TextView">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="smallTextSytle" parent="android:Widget.TextView">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="orangeButtonSytle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/OrangeRed</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

</resources>